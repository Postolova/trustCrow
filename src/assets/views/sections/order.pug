                            span.option__item-price 3,5$/1,1$
                        li.options__item
                            span.option__item-name Обычный 
                            span.option__item-price 4$/1,25$
                        li.options__item
                            span.option__item-name VIP
                            span.option__item-price 8$/3,5$
                        li.options__item
                            span.option__item-name Комментарии
                            span.option__item-price 3,5$
